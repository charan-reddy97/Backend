@model HelloWeb.Model.Book
<form action="/books" method="post">

    <div class="card m-5">
        <div class="card-body">
         
            @Html.TextBoxFor(d => d.Name)
            @Html.ValidationMessageFor(d => d.Name)

            @Html.TextBoxFor(d => d.Author)
            @Html.ValidationMessageFor(d => d.Author)
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Book</button>
        </div>
    </div>

</form>

<div class="card m-5">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Book Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in ViewBag.Books)
                {
    <tr>
        <td>@book.Id</td>
        <td>
            <a href="/books/details/@book.Id">@book.Name</a>
        </td>
        <td>@book.Author</td>
        <td>
            <a href="/books/edit/@book.Id" class="btn btn-primary">Edit</a>
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>

