@model HelloWeb.Model.Book

@if (Model != null)
{
<form action="/books/edit" method="post">

    <div class="card m-5">
        <div class="card-body">
            @Html.TextBoxFor(d => d.Id)
            @Html.ValidationMessageFor(d => d.Id)

            @Html.TextBoxFor(d => d.Name)
            @Html.ValidationMessageFor(d => d.Name)

            @Html.TextBoxFor(d => d.Author)
            @Html.ValidationMessageFor(d => d.Author)
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Book</button>
        </div>
    </div>

</form> }
else
{
<div class="alert alert-danger m-5">Book cannot be found</div>
}